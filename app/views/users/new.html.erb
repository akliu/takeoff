<div class="sign-in-container">
  <div class="animated fadeInLeftBig sign-in-page-title">
    <div class="logo">
      <div class="logo-image">
        <img src="https://res.cloudinary.com/dx1lykanb/image/upload/c_scale,w_100/v1445554455/gulfstream_650/departing_flight.png" />
      </div>
      <div class="logo-text">
        <h1 class="title">Takeoff</h1>
      </div>
    </div>
  </div>

  <br>
  <div class="log-in-page modal-content">
  <h3 class="sign-up-in-form">Sign Up</h3>

    <form class="animated fadeIn sign-up-in-form" action="<%= users_url %>" method="post">
      <%= auth_token_input %>

      <label>
        Username
        <input type="text" name="user[username]" value="">
      </label>

      <label>
        Password
        <input type="password" name="user[password]" value="">
      </label>

      <input type="submit" value="Sign Up">
      <br>
      <br>
      <p>Already a flyer?
        <%= link_to "Sign in here!", new_session_url %>
      </p>
    </form>
  </div>
  <div class="animated fadeInRightBig footer-distributed">
  	<div class="footer-right">
  		<a href="https://www.linkedin.com/in/andrewliu89"><i class="fa fa-linkedin"></i></a>
  		<a href="https://github.com/akliu"><i class="fa fa-github"></i></a>
  	</div>
  </div>
</div>





















